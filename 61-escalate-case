public void escalateIfMeetsCriteria(Case c) {

    if (c == null) return;

    Boolean typeOk = c.Type == 'Mechanical' || c.Type == 'Electrical';
    Boolean reasonOk = c.Reason == 'Breakdown';
    Boolean statusOk = c.Status == 'In Progress';

    if (typeOk && reasonOk && statusOk) {
        c.IsEscalated = true;
    }
}
